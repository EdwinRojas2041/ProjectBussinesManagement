@model IEnumerable<Project_BusinessManagement.Models.MInventoryItem>

@{
    ViewBag.Title = "InventoryReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reporte De Inventario</h2>

@Html.ActionLink("Descargar Pdf", "DownloadFile", new { lReport = 2 })

<div class="table-responsive">
    <table class="tablesorter">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LInventory.LNameInventory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LProduct.LCdProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LProduct.LNameProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LQtySellable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LQtyNonSellable)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LInventory.LNameInventory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LProduct.LCdProduct)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LProduct.LNameProduct)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LQtySellable)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LQtyNonSellable)
                </td>
            </tr>
        }

    </table>
</div>
    @Html.Partial("~/Views/Shared/_Pagination.cshtml")

    <h2>
        <label class="label-info">Total: </label>
        @Html.Label(ViewData["TotalInventory"].ToString(), htmlAttributes: new { @class = "label-success control-label", id = "lblTotalizador" })
    </h2>
