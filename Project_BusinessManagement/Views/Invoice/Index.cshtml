@using Project_BusinessManagement.Extensibles
@model IEnumerable<Project_BusinessManagement.Models.MInvoice>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Facturas</h2>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-2">
                @Html.Label("", "Por Codigo")
            </div>
            <div class="col-md-10">
                @Html.TextBox("pSearchCode")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="filtrar" class="btn btn-info" />
            </div>
        </div>
    </div>
<div class="table-responsive">


    <table class="tablesorter">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LIdInvoice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LCdInvoice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LCreationDate)
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.LIdInvoice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LCdInvoice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LCreationDate)
                    </td>
                    <td>
                        @Html.ActionLink("Detalle", "Details", new { id = item.LIdInvoice }).IfAllowedConfiguration("IsInvoice") 
                    </td>
                </tr>
            </tbody>
        }

    </table>
    @Html.Partial("~/Views/Shared/_Pagination.cshtml")
</div>
}