@model IEnumerable<Project_BusinessManagement.Models.MCustomer>

@{
    ViewBag.Title = "Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Clientes</h2>

<p>
    @Html.ActionLink("Crear Cliente", "Create")
</p>
<div class="table-responsive">
    <table class="tablesorter">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LIdCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LNameCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LLastNameCustomer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LCreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LNoIdentification)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LIdCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LNameCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LLastNameCustomer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LCreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LNoIdentification)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new {  id=item.LIdCustomer  }) |
                    @Html.ActionLink("Detalle", "Details", new {  id=item.LIdCustomer  }) |
                    @Html.ActionLink("Eliminar", "Delete", new {  id=item.LIdCustomer  }) |
                    @Html.ActionLink("Facturas", "Index", "Invoice", new { idCustomer = item.LIdCustomer }, null)
                </td>
            </tr>
        }

    </table>
    <div id="pager" class="pager">
        <form>
            <a href="#"><img src="~/Images/Icons/IFirst.png" class="first" alt="Primero" title="Primero" /></a>
            <a href="#"><img src="~/Images/Icons/IPrev.png" class="prev" alt="Anterior" title="Anterior" /></a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <!-- the "pagedisplay" can be any element, including an input -->
            <span class="pagedisplay" data-pager-output-filtered="{startRow:input} &ndash; {endRow} / {filteredRows} of {totalRows} total rows"></span>
            <a href="#"><img src="~/Images/Icons/INext.png" class="next" alt="Siguiente" title="Siguiente" /></a>
            <a href="#"><img src="~/Images/Icons/ILast.png" class="last" alt="Ultimo" title="Ultimo" /></a>
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <select class="pagesize">
                <option value="10" selected="selected">10</option>
                <option value="50">50</option>
                <option value="100">100</option>
                <option value="500">500</option>
                <option value="1000">1000</option>
            </select>
        </form>
    </div>
 </div>